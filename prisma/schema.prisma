generator client {
  provider 	= "prisma-client"
  output   = "../src/generated"
}

datasource db {
	provider 	= "postgresql"
	url 		= env("DATABASE_URL")
}

model NewsCategory {
	id 		String 	@id @default(cuid())
	name 	String 	@unique
}

model News {
	id 		String 	@id @default(cuid())
	title 	String 	@unique
	slug 	String 	@unique
	content String
	image 	String
	draft 	Boolean @default(true)
	isPinned Boolean @default(false)
	categoryId String
	publishedAt DateTime?
	pinnedAt DateTime?
}

model Admins {
	email 	String 	@id @unique
	role 	String
}